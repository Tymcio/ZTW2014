@{
    ViewBag.Title = "Szczegóły konkursu";
}

<h2>Konkurs</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
 <fieldset>
        <legend>Konkurs</legend>
        <ol>
            <li>
                @Html.Label("symbol", "Symbol:")
                @Html.Label("symbol","K1")
            </li>
             <li>
                @Html.Label("nazwa","Nazwa:")
                @Html.Label("nazwa","Konkurs 1")
            </li>

            <li>
                @Html.Label("dataRozp","Data rozpoczęcia:")
                @Html.TextBox("dataRozp","02-02-2014")
            </li>

             <li>
                @Html.Label("dataZakoncz","Data zakończenia:")
                @Html.TextBox("dataZakoncz", "02-06-2014")
            </li>
                <li>
                @Html.Label("status","Aktywny?")
                @Html.CheckBox("aktywny")
                
            </li>
 
        </ol>
  
        <input type="submit" value="Zapisz zmiany" />
    </fieldset>
}