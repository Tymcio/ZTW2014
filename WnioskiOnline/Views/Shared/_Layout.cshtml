<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left" style="padding-bottom:10px;">
                @Html.ActionLink(" ","Index","Home",null,
                new {style = "background: url('" + Url.Content("~/images/logoPWR.png") + "') no-repeat bottom right; display:block ;height:176px; width:122px;" })
                </div>
                <div class="float-left">
                     @Html.ActionLink(" ", "Index","Home",null , 
                new {style = "background: url('" + Url.Content("~/images/logo.png") + "') no-repeat center right; display:block;height:59px; width:388px;"})                              
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                <nav>
                    @if (Request.IsAuthenticated) {
    
   
                         <ul id="menu">
                                    <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Dane osobowe", "Dane", "Account")</li>

                            @if (User.IsInRole("Wnioskodawca"))
                             {
                                    <li>@Html.ActionLink("Wnioski", "Index", "Wnioskodawca")</li>
                              }
                             else
                             
                              if (User.IsInRole("Recenzent"))
                             {
                                    <li>@Html.ActionLink("Wnioski", "Index", "Recenzent")</li>
                              }
                             else
                             
                              if (User.IsInRole("Komisja"))
                             {
                                    <li>@Html.ActionLink("Wnioski", "Index", "Komisja")</li>
                              }
                             else
                                              
                                   if (User.IsInRole("Administrator"))
                                    {    
                                      <li>@Html.ActionLink("Wnioski", "Index", "Admin")</li>
                                      <li>@Html.ActionLink("Użytkownicy", "Uzytkownicy", "Admin")</li>
                                      <li>@Html.ActionLink("Konkursy", "Konkursy", "Admin")</li>
                                      <li>@Html.ActionLink("Ustawienia", "Ustawienia", "Admin")</li>
                                    }  

                        </ul>
                    }

            </nav>
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Politechnika Wrocławska</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jqueryui")
        @RenderSection("scripts", required: false)
    </body>
</html>
