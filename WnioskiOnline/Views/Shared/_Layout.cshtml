<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"> @Html.ActionLink(
                                                            " ", 
                                                            "Index", 
                                                            "Home", 
                                                            null , 
                                                            new { 
                                                            style = "background: url('" + Url.Content("~/images/logoPWR.png") + "') no-repeat bottom right; display:block ;height:176px; width:122px;" 
                                                             }
                                                            )
                                            @Html.ActionLink(
                                                            " ", 
                                                            "Index", 
                                                            "Home", 
                                                            null , 
                                                            new { 
                                                            style = "background: url('" + Url.Content("~/images/logo.png") + "') no-repeat center right; display:block;height:59px; width:388px;" 
                                                             }
                                                            )
                                            
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                <nav>
                <ul id="menu">
                            <li>@Html.ActionLink("Strona Główna", "Index", "Home")</li>
                </ul>
            </nav>
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Politechnika Wrocławska</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
