<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    @Html.ActionLink(" ", "Index", "Home", null , new { 
        style = "background: url('" + Url.Content("~/images/logo.png") + "') no-repeat center right; display:block; height:55px; width:365px;" })
                    
                </div>
            </div>
        </header>
        <div id="body">
            <section class="main-content clear-fix">
                <div class="float-left">
                <nav>
                         <ul id="menu">
                                    <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                             @if (Request.IsAuthenticated) {
                                    <li>@Html.ActionLink("Dane osobowe", "Dane", "Account")</li>

                            if (User.IsInRole("Wnioskodawca"))
                             {
                                    <li>@Html.ActionLink("Wnioski", "Index", "Wnioskodawca")</li>
                                    using (Html.BeginForm( "LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
                                    @Html.AntiForgeryToken()
                                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Wyloguj</a></li>
                              }
                                 }
                             else
                             
                              if (User.IsInRole("Recenzent"))
                             {
                                    <li>@Html.ActionLink("Wnioski", "Index", "Recenzent")</li>
                                    using (Html.BeginForm( "LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
                                    @Html.AntiForgeryToken()
                                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Wyloguj</a></li>
                              }
                              }
                             else
                             
                              if (User.IsInRole("Komisja"))
                             {
                                    <li>@Html.ActionLink("Wnioski", "Index", "Komisja")</li>
                                    using (Html.BeginForm( "LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
                                    @Html.AntiForgeryToken()
                                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Wyloguj</a></li>
                              }
                               }
                             else
                                              
                                   if (User.IsInRole("Administrator"))
                                    {    
                                      <li>@Html.ActionLink("Wnioski", "Index", "Admin")</li>
                                      <li>@Html.ActionLink("Użytkownicy", "Uzytkownicy", "Admin")</li>
                                      <li>@Html.ActionLink("Konkursy", "Konkursy", "Admin")</li>
                                      using (Html.BeginForm( "LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
                                      @Html.AntiForgeryToken()
                                      <li><a href="javascript:document.getElementById('logoutForm').submit()">Wyloguj</a></li>
                                        }
                                    }  
                                 }
                             else
                             {
                             <li>@Html.ActionLink("Zarejestruj", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                             <li>@Html.ActionLink("Zaloguj", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                             }

                        </ul>
            </nav>
            <img src="~/Images/logoPWR.png" height="158" width="110" />
            </div>
                @RenderBody()
            
            </section>
            </div>
        <footer>
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Politechnika Wrocławska</p>
                </div>
                <div class="float-right" style="padding-top:10px;">
                    <img src="~/images/logoSS.png" height="90" width="283" />
                </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jqueryui")
        @RenderSection("scripts", required: false)
    </body>
</html>
